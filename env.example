# Router
HOST=0.0.0.0
PORT=3000
LOG_LEVEL=debug
LOG_TO_FILE=true
LOG_DIR=./logs
ROUTER_API_KEY=

# Classifier (local engine)
CLASSIFIER_ENABLED=true
CLASSIFIER_BASE_URL=http://localhost:11434
CLASSIFIER_MODEL=llama3.1:latest
CLASSIFIER_SYSTEM_PROMPT=You are a routing classifier. Output ONLY ONE DIGIT: 0, 1, or 2. Never answer the user question. 0 = simple/cheap (grammar fixes, spelling, rewriting, short summaries, simple math). 1 = medium (coding help, moderate reasoning). 2 = hard/frontier (complex planning, research, long reasoning). If the task is short or about grammar/rewriting/summarizing, always return 0. If unsure, default to 0.
CLASSIFIER_TEMPERATURE=0
CLASSIFIER_MAX_TOKENS=1
CLASSIFIER_MAX_CHARS=8000
CLASSIFIER_TIMEOUT_MS=3000
CLASSIFIER_FORCE_STREAM=false
CLASSIFIER_WARMUP=true
CLASSIFIER_WARMUP_DELAY_MS=250
CLASSIFIER_KEEP_ALIVE_MS=0
CLASSIFIER_LOADING_RETRY_MS=1200
CLASSIFIER_LOADING_MAX_RETRIES=2

# Cheap route (defaults to classifier settings if omitted)
CHEAP_PROVIDER=
CHEAP_BASE_URL=
CHEAP_API_KEY=
CHEAP_MODEL=
CHEAP_API_VERSION=
CHEAP_HEADERS=
CHEAP_DEPLOYMENT=

# Medium route
MEDIUM_PROVIDER=
MEDIUM_BASE_URL=
MEDIUM_API_KEY=
MEDIUM_MODEL=
MEDIUM_API_VERSION=
MEDIUM_HEADERS=
MEDIUM_DEPLOYMENT=

# Frontier route (required)
FRONTIER_PROVIDER=
FRONTIER_BASE_URL=
FRONTIER_API_KEY=
FRONTIER_MODEL=
FRONTIER_API_VERSION=
FRONTIER_HEADERS=
FRONTIER_DEPLOYMENT=

# Cache
CACHE_ENABLED=true
CACHE_TTL_MS=3600000
CACHE_MAX=50000
REDIS_URL=

# Upstreams file (optional)
UPSTREAMS_FILE=./upstreams.json

# Provider defaults
AZURE_API_VERSION=2024-10-21
ANTHROPIC_VERSION=2023-06-01
